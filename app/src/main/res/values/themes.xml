<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inspector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_90</item>
        <item name="colorPrimaryVariant">@color/blue_95</item>
        <item name="colorOnPrimary">@color/yellow_40</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_30</item>
        <item name="colorSecondaryVariant">@color/green_40</item>
        <item name="colorOnSecondary">@color/purple_90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurfaceVariant">@color/yellow_40</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_90</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_local_parking_24_white</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.Inspector</item>
    </style>
</resources>